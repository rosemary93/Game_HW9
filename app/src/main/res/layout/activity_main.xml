<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F5CDC"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_4_in_row"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#590F5E"
            android:text="@string/four_in_a_row"
            android:textColor="#E2A2F4" />

        <Button
            android:id="@+id/button_tic_tac_toe"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#590F5E"
            android:text="@string/tic_tac_toe"
            android:textColor="#E2A2F4" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_game_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_buttons"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#4F5CDC"
        android:padding="3dp">

    </FrameLayout>

</RelativeLayout>